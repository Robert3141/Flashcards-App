<resources>
    <!-- Main Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="themeColorPrimary">@color/colorPrimary</item>
        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themeColorBright">@color/colorOutput</item>
        <item name="themeColorText">@color/colorText</item>
        <item name="themeSettingsImage">@drawable/baseline_color_lens_white_48</item>
        <item name="android:tint">@color/black</item>
    </style>

    <!-- Dark Theme -->
    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryThemeDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkThemeDark</item>
        <item name="colorAccent">@color/colorAccentThemeDark</item>
        <item name="themeColorPrimary">@color/colorPrimaryThemeDark</item>
        <item name="themeColorAccent">@color/colorAccentThemeDark</item>
        <item name="themeColorBright">@color/colorOutputDark</item>
        <item name="themeColorText">@color/colorTextThemeDark</item>
        <item name="themeSettingsImage">@drawable/baseline_color_lens_white_48</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Night Theme -->
    <style name="nightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryThemeDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryThemeDark</item>
        <item name="colorAccent">@color/colorPrimaryThemeDark</item>
        <item name="themeColorPrimary">@color/colorPrimaryThemeDark</item>
        <item name="themeColorAccent">@color/colorPrimaryThemeDark</item>
        <item name="themeColorBright">@color/colorPrimaryThemeDark</item>
        <item name="themeColorText">@color/red</item>
        <item name="themeSettingsImage">@drawable/baseline_color_lens_white_48</item>
        <item name="android:tint">@color/red</item>
    </style>

    <!-- Button Style -->
    <style name="button_style" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?themeColorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">?themeColorText</item>
    </style>

    <!-- text view style -->
    <style name="textViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?themeColorText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <!-- spinner style -->
    <style name="spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?themeColorText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">?themeColorPrimary</item>
    </style>

    <!-- switch style -->
    <style name="switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- toolbar style -->
    <style name="toolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">?themeColorText</item>
        <item name="actionMenuTextColor">?themeColorText</item>
    </style>

    <!-- separate styles -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
