<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:onClick="clickFlipFlashcard">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="?themeColorBright"
            android:padding="@dimen/flashcard_padding"
            android:src="@drawable/rectangle"
            android:contentDescription="@string/card_back"/>

    <TextView android:id="@+id/flashcardBackText"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:text="@string/card_back"
              android:textColor="?themeColorText"
              android:gravity="center"/>
</FrameLayout>